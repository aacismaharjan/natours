header.header 
    nav.nav.nav--tours
        a.nav__el(href="/") All tours 
    .header__logo 
        img(src='/img/logo-white.png' alt='Natours logo')
    nav.nav.nav--user 
        if user
            a.nav__el.nav__el--logout Log out
            a.nav__el(href="/me")
                img.nav__user-img(src=`/img/users/${user.photo}` alt=`Photo of ${user.name}`)
                span=user.name.split(" ")[0]
        else
            a.nav__el(href='/login') Log in
            a.nav__el(href='/signup').nav__el--cta Sign  up

header.header.mobile-header 
    a(href='/')
        .header__logo 
            img(src='/img/logo-white.png' alt='Natours logo')
    .nav-links 
        a(href="/") All tours 
        if user 
            a.nav__el--logout Log out
            a(href="/me") My Profile
        else 
            a(href="/login") Log in 
            a(href="/signup") Sign up

    .nav-icon 
        a(href='javascript:void(0)')#navBtn
            i.fa.fa-bars